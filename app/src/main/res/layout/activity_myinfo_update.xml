<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar_updateInfo"
        layout="@layout/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_updateInfo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/tvbg_updateinfo"
                android:fontFamily="@font/notosanskr_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="이메일"
                android:textColor="@color/main_blue" />

            <TextView
                android:id="@+id/tvUpdateInfo_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="32dp"
                android:layout_weight="1"
                android:textColor="@color/gray"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/tvbg_updateinfo"
                android:fontFamily="@font/notosanskr_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="전화번호"
                android:textColor="@color/main_blue" />

            <TextView
                android:id="@+id/tvUpdateInfo_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="32dp"
                android:layout_weight="1"
                android:textColor="@color/gray"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/tvbg_updateinfo"
                android:fontFamily="@font/notosanskr_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="비밀번호"
                android:textColor="@color/main_blue" />

            <EditText
                android:id="@+id/etUpdateInfo_newPw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:background="@drawable/et_bg_login_signup"
                android:ems="10"
                android:hint="변경할 비밀번호를 입력하세요"
                android:inputType="textPassword"
                android:paddingTop="8dp"
                android:paddingLeft="4dp"
                android:paddingBottom="8dp"
                android:paddingRight="4dp"
                android:textColorHint="@color/hint"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tvUpdateInfo_chpw"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="16dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/btn_shape"
                android:fontFamily="@font/notosanskr_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="변경"
                android:textColor="@color/white" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvUpdateInfo_registerSeller"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/btn_shape"
                android:fontFamily="@font/notosanskr_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="사업자번호 등록하기"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/tvbg_updateinfo"
                android:fontFamily="@font/notosanskr_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="사업자등록번호"
                android:textColor="@color/main_blue"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvUpdateInfo_sellerNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="32dp"
                android:layout_weight="1"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>