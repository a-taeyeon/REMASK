<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kbsc.remask">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.REMASK">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".SignupActivity"/>
        <activity android:name=".LoginActivity" />
        <activity android:name=".MypageActivity"/>
        <activity android:name=".MyPointListActivity"/>
        <activity android:name=".MySettingsActivity"/>
        <activity android:name=".MyInfoUpdateActivity"/>
        <activity android:name=".MyCartActivity"/>
        <activity android:name=".MyOrderListActivity"/>
        <activity android:name=".MyOrderDetailActivity"/>
        <activity android:name=".MyMaskOrderActivity"/>
        <activity android:name=".MyMaskOrderFormActivity"/>
        <activity android:name=".MyMaskOrderListActivity"/>
        <activity android:name=".MaskRegisterActivity"/>
    </application>

</manifest>